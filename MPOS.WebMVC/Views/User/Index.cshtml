@model MPOS.WebMVC.Models.User
@{
    ViewData["Title"] = "MPOS Login";
    Layout = null;
}
<title>MPOS Management System</title>
<link href="~/Logo/default_icon.png" type="image/x-icon" rel="icon" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@if (!string.IsNullOrEmpty(ViewBag.Info))
{
    <div class="alert alert-info">
        <strong>@ViewBag.Info</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="float:right!important"></button>
    </div>

}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger">
        <strong>@ViewBag.error</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="float:right!important"></button>
    </div>
}

<div class="container">
    <div class="row align-items-center vh-100">
        <div class="col-xl-4 col-lg-4 col-sm-10 col-10 mx-auto ">
            <div class="card shadow border">
                <div class="card-body d-flex flex-column align-items-center">

                    <form class="User" asp-action="Login" asp-controller="User" method="post" enctype="multipart/form-data">

                        <div class="row">

                            <div class="col-12 d-block" style="text-align:center;">
                                <img class="img-80 img-fluid pb-2" style="width:70px;" src="~/Logo/mpos_icon.png"/>
                                <h3>MPOS</h3>
                                <h6 style="color:gray;">Management System</h6>
                            </div>


                            <div class="col-12 mt-3">
                                <div class="form-group">
                                    <p>Username</p>
                                    <input class="form-control" asp-for="Username" required />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <p>Password</p>
                                    <input class="form-control" type="password" asp-for="Password" required />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-primary mt-3" type="submit"><i class="bi bi-box-arrow-in-right"></i> Login</button>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<link href="~/css/site.css" rel="stylesheet" />
<script src="~/js/site.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
